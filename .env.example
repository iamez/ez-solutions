# EZ Solutions — Environment Variables
# Copy this file to .env and fill in real values.
# NEVER commit .env to version control.

# ── Django core ──────────────────────────────────────────────────────────────
DJANGO_SECRET_KEY=replace-me-with-a-long-random-string-use-python-secrets
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1
DJANGO_SETTINGS_MODULE=config.settings.dev

# ── Database (leave blank to use SQLite in dev) ───────────────────────────────
# DATABASE_URL=postgres://user:password@localhost:5432/ezsolutions

# ── Stripe ────────────────────────────────────────────────────────────────────
STRIPE_PUBLIC_KEY=pk_test_xxx
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# ── Email (console backend is used in dev — no SMTP needed) ──────────────────
# For production set these + switch EMAIL_BACKEND to django-anymail/Mailgun etc.
# MAILGUN_API_KEY=key-xxx
# MAILGUN_SENDER_DOMAIN=mg.example.com

# ── Redis / Celery ────────────────────────────────────────────────────────────
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0

# ── AWS S3 (optional — for production media/static storage) ──────────────────
# AWS_ACCESS_KEY_ID=xxx
# AWS_SECRET_ACCESS_KEY=xxx
# AWS_STORAGE_BUCKET_NAME=ez-solutions-prod

# ── Sentry (optional — error tracking in production) ─────────────────────────
# SENTRY_DSN=https://xxx@o0.ingest.sentry.io/xxx
