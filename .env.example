# EZ Solutions — Environment Variables
# Copy this file to .env and fill in real values.
# NEVER commit .env to version control.

# ── Django core ──────────────────────────────────────────────────────────────
DJANGO_SECRET_KEY=change-me-to-a-random-50-char-string
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1
DEBUG=True

# ── Database (leave blank to use SQLite in dev) ───────────────────────────────
DB_ENGINE=django.db.backends.sqlite3
DB_NAME=
DB_USER=
DB_PASSWORD=
DB_HOST=
DB_PORT=

# ── Stripe ────────────────────────────────────────────────────────────────────
STRIPE_PUBLIC_KEY=pk_test_xxx
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# ── Redis / Celery ────────────────────────────────────────────────────────────
REDIS_URL=redis://localhost:6379/0

# ── Email ─────────────────────────────────────────────────────────────────────
DEFAULT_FROM_EMAIL=noreply@ez-solutions.com
ACCOUNT_EMAIL_VERIFICATION=optional

# ── Sentry (optional — error tracking in production) ─────────────────────────
SENTRY_DSN=

# ── Site ──────────────────────────────────────────────────────────────────────
SITE_URL=http://localhost:7000

# ── Telegram Bot (create via @BotFather; TLS-encrypted) ──────────────────────
TELEGRAM_BOT_TOKEN=
ADMIN_TELEGRAM_CHAT_ID=

# ── Signal Messenger (via signal-cli-rest-api; E2E encrypted) ────────────────
SIGNAL_CLI_REST_API_URL=
SIGNAL_SENDER_NUMBER=
ADMIN_SIGNAL_NUMBER=
